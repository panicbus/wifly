    <script type="text/javascript">
      var map = L.map('map').setView([51.505, -0.09], 13);
      var marker = L.marker([<%= @searched_airport.latitude %>, <%= @searched_airport.longitude %>]).addTo(map);
      marker.openPopup('click').bindPopup("<b><%= @searched_airport.name %></b><br><%= @searched_airport.details %>").openPopup();

       L.tileLayer('http://{s}.tile.cloudmade.com/3f67482caa0a497e8193801abf8ed7cd/997/256/{z}/{x}/{y}.png', {
